{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "overrides": [],
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["components", "./src/js/components"],
          ["assets", "./src/assets"],
          ["js", "./src/js"],
          ["styles", "./src/styles"]
        ]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": 0
  }
}
